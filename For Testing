# On DHCP Server 1:
subnet 10.150.0.0 netmask 255.255.255.0 {
    range 10.150.0.10 10.150.0.100;
    option routers 10.150.0.1;
}

# On DHCP Server 2:
subnet 10.150.0.0 netmask 255.255.255.0 {
    range 10.150.0.101 10.150.0.200;
    option routers 10.150.0.1;
}



ip dhcp snooping
ip dhcp snooping vlan 1-4094
interface GigabitEthernet1/0
    ip dhcp snooping trust
